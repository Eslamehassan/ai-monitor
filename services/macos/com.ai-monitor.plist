<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.ai-monitor</string>

    <key>ProgramArguments</key>
    <array>
        <string>__INSTALL_DIR__/run.sh</string>
    </array>

    <key>WorkingDirectory</key>
    <string>__INSTALL_DIR__</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <key>StandardOutPath</key>
    <string>__INSTALL_DIR__/logs/ai-monitor.log</string>

    <key>StandardErrorPath</key>
    <string>__INSTALL_DIR__/logs/ai-monitor.err</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>AI_MONITOR_PORT</key>
        <string>6820</string>
        <key>PATH</key>
        <string>/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin</string>
    </dict>

    <key>ThrottleInterval</key>
    <integer>5</integer>
</dict>
</plist>
